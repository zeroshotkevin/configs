set tabstop=4
set shiftwidth=4
set softtabstop=4
set smarttab
set expandtab
inoremap jk <ESC>
syntax on
filetype plugin indent on
set encoding=utf-8
vnoremap . :norm.<CR>
set number
nnoremap <F2> :set nonumber!<CR>
set cursorline
set wildmenu
set showmatch
set incsearch
set hlsearch
nnoremap <space> :nohlsearch<CR>
set tw=80
